<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/headerimage"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NMIMS"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">

                <View
                    android:id="@+id/rounded_card"
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_textview_bg" />

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:id="@+id/fl1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:id="@+id/profile"/>

                    <TextView
                        android:id="@+id/initials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/facultyName"
                    android:layout_below="@id/fl1"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/facultyName"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/facultyId"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp"
                            android:textColor="#4F4E4E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/facultyId"
                            android:text="Faculty ID"
                            android:textColor="#000000"
                            android:layout_marginTop="-5dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/poppins_regular" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4F4E4E"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/department"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/department"
                            android:text="Department"
                            android:textColor="#000000"
                            android:layout_marginTop="-5dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/poppins_regular" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/addAnnouncementCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Announcement"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â†’"
                        android:textSize="24sp"
                        android:textColor="#D73A31" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- My Subjects Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Subjects"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subjectsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/tvNoSubjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No subjects assigned yet"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#757575"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>