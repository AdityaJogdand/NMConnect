<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement Title"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"/>

        <!-- Priority and Status Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDialogPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"
                app:chipBackgroundColor="#FF0000"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDialogStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"
                app:chipBackgroundColor="#808080"/>
        </LinearLayout>

        <!-- Department -->
        <TextView
            android:id="@+id/tvDialogDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department: Computer Engineering"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#4F4E4E"
            android:layout_marginBottom="6dp"/>

        <!-- Semester -->
        <TextView
            android:id="@+id/tvDialogSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester: 5"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#4F4E4E"
            android:layout_marginBottom="6dp"/>

        <!-- Subjects -->
        <TextView
            android:id="@+id/tvDialogSubjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subjects: Data Structures, Algorithms"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#4F4E4E"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E5E5E5"
            android:layout_marginBottom="16dp"/>

        <!-- Message Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FF0000"
            android:layout_marginBottom="8dp"/>

        <!-- Message Content -->
        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the announcement message content..."
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E5E5E5"
            android:layout_marginBottom="16dp"/>

        <!-- Posted Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:tint="#FF0000"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvDialogPostedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted: 25 Oct 2025, 10:30 AM"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#4F4E4E"/>
        </LinearLayout>

        <!-- Expiry Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:tint="#FF0000"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvDialogExpiryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires: 30 Oct 2025, 11:59 PM"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#4F4E4E"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>