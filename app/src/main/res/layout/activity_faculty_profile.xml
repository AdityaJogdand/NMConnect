<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:fillViewport="true"
    tools:context=".FacultyProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Image with Text -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/headerimage"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NMIMS"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.6" />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white"
                android:contentDescription="Back" />
        </RelativeLayout>

        <!-- Main Profile Card (Overlapping) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Circle -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profileCircle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#D32F2F">

                    <TextView
                        android:id="@+id/initials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="F"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#FFFFFF" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Name -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp" />

                <!-- Faculty ID -->
                <TextView
                    android:id="@+id/tvFacultyId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAC12345"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#757575"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="20dp" />

                <!-- Department -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computer Science"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 9876543210"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="faculty@example.com"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#D32F2F"
            app:cornerRadius="12dp"
            android:elevation="4dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:text="Logout"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#D32F2F"
            android:textSize="16sp"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/bg_button_outline_red"
            app:cornerRadius="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
