<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_red_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back"
                        android:contentDescription="Back"
                        android:padding="4dp"
                        app:tint="@android:color/white"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Subject Details"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold" />

                </RelativeLayout>

                <!-- Subject Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSubjectName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Handling and Visualization"
                            android:textColor="#212121"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/tvSubjectCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="DHV101"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:letterSpacing="0.1" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="12dp"
                            android:background="#D32F2F" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvBranch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Btech(AIDS)"
                                android:textColor="#424242"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:text="â€¢"
                                android:textColor="#D32F2F"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:id="@+id/tvSemester"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Semester V"
                                android:textColor="#424242"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_medium" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Faculty Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/facultySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="8dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty Information"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/tvFacultyName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shailendra Aote"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/tvFacultyDept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="STME"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/tvFacultyEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="shailendra.aote@gmail.com"
                        android:textColor="#D32F2F"
                        android:textSize="13sp"
                        android:autoLink="email"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/tvFacultyPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+91-9876543210"
                        android:textColor="#D32F2F"
                        android:textSize="13sp"
                        android:autoLink="phone"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Marks Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/marksSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internal Marks"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="20dp" />

                <!-- Marks Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#FAFAFA"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attendance"
                                android:textColor="#757575"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.05" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tvAttendance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textColor="#212121"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#FAFAFA"
                            android:padding="16dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lab Exam"
                                android:textColor="#757575"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.05" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tvLabExam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textColor="#212121"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/10"
                                    android:textColor="#9E9E9E"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginBottom="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#FAFAFA"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mid Term 1"
                                android:textColor="#757575"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.05" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tvMidTerm1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textColor="#212121"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/10"
                                    android:textColor="#9E9E9E"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginBottom="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#FAFAFA"
                            android:padding="16dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mid Term 2"
                                android:textColor="#757575"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.05" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tvMidTerm2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textColor="#212121"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/10"
                                    android:textColor="#9E9E9E"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginBottom="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#FAFAFA"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Presentation"
                                android:textColor="#757575"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.05" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tvPresentation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textColor="#212121"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/5"
                                    android:textColor="#9E9E9E"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginBottom="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="#FAFAFA"
                            android:padding="16dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Viva"
                                android:textColor="#757575"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:letterSpacing="0.05" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tvViva"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textColor="#212121"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/5"
                                    android:textColor="#9E9E9E"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginBottom="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Total Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#D32F2F"
                    android:padding="20dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:letterSpacing="0.1"
                            android:alpha="0.85" />

                        <TextView
                            android:id="@+id/tvTotalMarks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="50/50"
                            android:textColor="@android:color/white"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@android:color/white"
                        android:alpha="0.3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PERCENTAGE"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:letterSpacing="0.1"
                            android:alpha="0.85" />

                        <TextView
                            android:id="@+id/tvPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="100.00%"
                            android:textColor="@android:color/white"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- No Data Message -->
        <TextView
            android:id="@+id/tvNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="No marks data available"
            android:textColor="#9E9E9E"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>